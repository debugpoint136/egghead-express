      * {
        font-family: Helvetica, Arial, sans-serif;
      }

      div {
        display: flex;
        align-items: center;
        padding: 1em;
        font-size: 1.2em;
      }

      div a {
        padding-left: 0.5em;
      }

      img {
        width: 300px;
        height: 350px;
      }
    </style>
  </head>
  <body>

    <div class="nav">
      <a href="/">Back to the Users List</a>
    </div>

    <div class="pic">
      <img src="/profilepics/{{username}}_sm.jpeg" alt="" />
      <p>
        <a href="#" onclick="edit()">Edit</a>
        <a href="#" onclick="del()">Delete</a>
      </p>
    </div>

    <h1> <small>{{user.name}}</small></h1>

    <dl>
